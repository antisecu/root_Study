// 1. 사원의 이름과 급여와 입사일자만 출력하시오.
select ename as '사원이름', sal as '급여', hiredate as '입사일자'
from emp;


// 2. dept 테이블의 컬럼중 deptno를 '부서번호', dname을 '부서명'으로 출력하는 sql문을 작성하시오.
select deptno as '부서번호', dname as '부서명'
from dept;


// 3. emp 테이블의 직급이 중복되지 않고 한번씩 나열하는 sql문 작성하시오.
1) select distinct job
from emp;

2) select job
from emp

union 

select job
from emp;


// 4. 급여가 300 이하인 사원의 사원번호, 사원 이름, 급여를 출력하기
select empno as '사원번호', ename as '사원이름', sal as '급여'
from emp
where sal <= 300;


// 5. 이름이 '감우성'인 사원의 사원번호, 사원명, 급여를 출력하기
select empno as '사원번호', ename as '사원이름', sal as '급여'
from emp
where ename = '감우성';


// 6. 급여가 250이거나 300이거나 500인 사원들의 사원 번호와 사원명과 급여를 검색하기
1) select empno as '사원번호', ename as '사원이름', sal as '급여'
from emp
where sal in(250, 300, 500);

2) select empno as '사원번호', ename as '사원이름', sal as '급여'
from emp
where sal = 250 OR sal = 300 OR sal = 500;
where sal in(250, 300, 500);


// 7. like 연산자와 와일드 카드를 사용하여 사원들 중에서 이름이 '김'으로 시작하는 사람과
이름중에 '기를' 포함하는 사원의 사원번호와 사원 이름을 출력하기
select empno as '사원번호', ename as '사원이름'
from emp
where ename like '김%' OR ename like '%기%';

